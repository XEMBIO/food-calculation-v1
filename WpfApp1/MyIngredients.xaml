<Page x:Class="food_calculation.MyIngredients"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:food_calculation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyIngredients">

    <Grid>

        <Grid.Background>

            <LinearGradientBrush>

                <GradientStop Color="#006ba9" Offset="0"/>
                <GradientStop Color="#001a4a" Offset="1"/>

            </LinearGradientBrush>

        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Meine Zutaten"
            Margin="20"
            FontSize="40"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            Foreground="White"
            x:Name="Title"/>

        <Button
            Grid.Column="2"
            Grid.Row="0"
            Margin="20"
            Content="Zurück"
            Click="Button_Click"
            FontSize="20"
            x:Name="BackButton">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="#a1000000"
                        CornerRadius="25"
                        >
                        <TextBlock
                            Text="Zurück"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="10"
                            FontSize="{TemplateBinding FontSize}"
                            Foreground="White"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <ScrollViewer
            VerticalScrollBarVisibility="Auto"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="20"
            Background="#a1000000"
            FontSize="20"
            x:Name="ScrollViewerJapp">

            <StackPanel
                x:Name="IngredientsStackPanel"
                Margin="10">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
