<Page x:Class="food_calculation.IngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:food_calculation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngredientPage">

    <Grid Background="#afe2f2">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Content="Ingredients"
            Margin="20"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            FontSize="35"
            FontWeight="Bold"
            x:Name="Title"/>

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="20"
            Background="#ff0000"
            BorderThickness="4"
            Content="Zurück"
            FontSize="20"
            Click="BackButton"/>

        <TextBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="60,60,0,0"
            Background="White"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            PreviewTextInput="NumberTextBox"
            x:Name="AmountPeople"/>

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="60"
            Margin="0,60,0,0"
            HorizontalAlignment="Left"
            Background="#5989ff"
            Click="RefreshIngredients"/>

        <ScrollViewer 
            VerticalScrollBarVisibility="Auto"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="30"
            Background="AliceBlue"
            >
            <StackPanel x:Name="IngredientsPanel"></StackPanel>
            
        </ScrollViewer>
        <ScrollViewer 
            VerticalScrollBarVisibility="Auto"
            Grid.Row="1"
            Grid.Column="1"
            Margin="150,30"
            Background="AliceBlue"
            x:Name="IngredientMenu">
            <StackPanel x:Name="IngredientAmountPanel"></StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
