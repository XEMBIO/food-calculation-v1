<Page x:Class="food_calculation.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:food_calculation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>

        <Grid.Background>

            <LinearGradientBrush>

                <GradientStop Color="#006ba9" Offset="0"/>
                <GradientStop Color="#001a4a" Offset="1"/>

            </LinearGradientBrush>

        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Content="Gerichte"
            Margin="20,0"
            FontSize="40"
            Foreground="White"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            x:Name="Title"/>

        <Button
            Grid.Row="0"
            Grid.Column="3"
            Margin="20"
            Background="#a1000000"
            Content="Zurück"
            FontSize="20"
            Foreground="White"
            Click="Button_Click"
            x:Name="BackButton">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="25"
                        >
                        <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="0"
            Margin="20"
            Background="#a1000000"
            Content="Refresh"
            FontSize="20"
            Click="RefreshMenu"
            Foreground="White"
            x:Name="RefreshButton">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="25">
                        <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button
            Grid.Row="0"
            Grid.Column="2"
            Margin="20"
            Content="Hinzufügen"
            Click="AddButton"
            Foreground="White"
            Background="#a1000000"
            x:Name="Add_Button">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        CornerRadius="25">
                        <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Margin="25"
            Background="#a1000000"
            CornerRadius="30">
        <ScrollViewer 
            VerticalScrollBarVisibility="Auto"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            Background="Transparent"
            x:Name="GerichtMenu">

            <StackPanel x:Name="GerichtScroll">

            </StackPanel>

        </ScrollViewer>

        </Border>

    </Grid>
</Page>
