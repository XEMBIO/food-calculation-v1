<Page x:Class="food_calculation.AddDishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:food_calculation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddDishPage">

    <Grid>

        <Grid.Background>

            <LinearGradientBrush>

                <GradientStop Color="#006ba9" Offset="0"/>
                <GradientStop Color="#001a4a" Offset="1"/>

            </LinearGradientBrush>

        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Label
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Content="Gericht hinzufügen"
            Margin="20,0"
            x:Name="Title"
            FontSize="35"
            Foreground="White"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"/>

        <Button
            Grid.Column="3"
            Grid.Row="0"
            Margin="20"
            Content="Zurück"
            FontSize="20"
            Click="BackButton">

            <Button.Template>

                <ControlTemplate TargetType="Button">

                    <Border Background="#a1000000" CornerRadius="25">

                        <TextBlock 
                            Text="Zurück"
                            FontSize="{TemplateBinding FontSize}"
                            Foreground="White"
                            TextAlignment="Center"
                            VerticalAlignment="Center"/>

                    </Border>

                </ControlTemplate>
                
            </Button.Template>
                
        </Button>

        <TextBox
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="20,5"
            Height="40"
            FontSize="20"
            x:Name="DishNameTextBox"
            />

        <TextBox
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="20,5"
            Height="40"
            FontSize="20"
            x:Name="IngredientName"/>

        <ScrollViewer
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="20,5"
            Background="White"
            VerticalScrollBarVisibility="Auto"
            >

            <StackPanel
                x:Name="IngredientListPanel"
                >
                
            </StackPanel>

        </ScrollViewer>


        <Button
            Grid.Row="2"
            Grid.Column="2"
            Margin="0,5"
            Content="->"
            Background="#7a7aff"
            FontSize="30"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Top"
            Click="IngredientButton"/>

        <Button
            Grid.Row="4"
            Grid.Column="3"
            Margin="5"
            Content="Bestätigen"
            FontSize="20"
            Background="#00ff00"
            Click="AcceptButton"/>

    </Grid>
</Page>
